
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "description": "The user's first name."
        },
        "lastName": {
          "type": "string",
          "description": "The user's last name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "phoneNumber": {
            "type": "string",
            "description": "The user's phone number."
        },
        "shippingAddress": {
            "type": "string",
            "description": "The user's primary shipping address."
        },
        "roles": {
          "type": "array",
          "description": "A list of roles assigned to the user.",
          "items": {
            "type": "string",
            "enum": ["dashboard", "orders", "quotes", "users", "purchase-orders", "accounting", "analytics", "notifications", "settings", "superadmin"]
          }
        },
        "notificationPreferences": {
            "type": "object",
            "description": "User's notification preferences.",
            "properties": {
                "marketingEmails": {
                    "type": "boolean",
                    "description": "Whether the user wants to receive marketing emails."
                },
                "quoteAndOrderUpdates": {
                    "type": "boolean",
                    "description": "Whether the user wants to receive email notifications for quote and order status changes."
                }
            }
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp when the user profile was created."
        }
      },
      "required": ["firstName", "lastName", "email", "roles", "createdAt"]
    },
    "Quote": {
      "title": "Quote",
      "description": "Represents a customer's request for a quote on custom items.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who created the quote."
        },
        "customerName": {
          "type": "string"
        },
        "customerEmail": {
          "type": "string",
          "format": "email"
        },
        "customerPhone": {
          "type": "string"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "quantity": { "type": "string" },
              "unit": { "type": "string" },
              "customUnit": { "type": "string" },
              "unitCost": { "type": "number" }
            },
            "required": ["name", "quantity", "unit"]
          }
        },
        "services": {
          "type": "array",
          "items": { "type": "string" }
        },
        "additionalNotes": { "type": "string" },
        "deliveryOption": {
          "type": "string",
          "enum": ["pickup", "delivery-lagos", "quote"]
        },
        "lagosLga": { "type": "string" },
        "shippingAddress": { "type": "string" },
        "shippingCost": { "type": "number" },
        "status": {
          "type": "string",
          "enum": ["Pending Review", "Pending User Action", "Quote Ready", "Accepted", "Rejected", "Cancelled", "Paid"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["userId", "customerName", "customerEmail", "items", "deliveryOption", "status", "createdAt"]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a finalized and paid order.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "quoteId": { "type": "string" },
        "customerName": { "type": "string" },
        "customerEmail": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "quantity": { "type": "string" },
              "unit": { "type": "string" },
              "unitCost": { "type": "number" }
            }
          }
        },
        "totalCost": { "type": "number" },
        "shippingAddress": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["Pending", "Processing", "Shipped", "Delivered", "Cancelled"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["userId", "quoteId", "totalCost", "status", "createdAt"]
    },
    "Notification": {
      "title": "Notification",
      "description": "Represents a notification for a user.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who this notification is for."
        },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "href": { "type": "string" },
        "isRead": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "title", "isRead", "createdAt"]
    },
    "StoreItem": {
        "title": "Store Item",
        "description": "Represents a single item in the store showcase.",
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "description": "The name of the product."
            },
            "description": {
                "type": "string",
                "description": "A brief description of the product."
            },
            "price": {
                "type": "string",
                "description": "The price of the product (can be a formatted string)."
            },
            "imageUrl": {
                "type": "string",
                "format": "uri",
                "description": "The URL for the product image."
            }
        },
        "required": ["name", "description", "imageUrl"]
    },
    "StoreSettings": {
        "title": "Store Settings",
        "description": "Contains the settings for the product showcase.",
        "type": "object",
        "properties": {
            "items": {
                "type": "array",
                "description": "A list of products to display in the store.",
                "items": {
                    "$ref": "#/entities/StoreItem"
                }
            }
        }
    },
    "UnitOfMeasure": {
      "title": "Unit of Measure",
      "description": "A unit of measure for custom quote items.",
      "type": "object",
      "properties": {
        "name": { "type": "string" }
      },
      "required": ["name"]
    },
    "OptionalService": {
      "title": "Optional Service",
      "description": "An optional service for custom quotes.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "label": { "type": "string" }
      },
      "required": ["id", "label"]
    },
    "ShippingZone": {
      "title": "Shipping Zone",
      "description": "A shipping zone with a set fee.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "fee": { "type": "number" }
      },
      "required": ["name", "fee"]
    },
    "Supplier": {
      "title": "Supplier",
      "description": "Represents a supplier of goods or services.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "address": { "type": "string" }
      },
      "required": ["id", "name", "email"]
    },
    "AccountingSettings": {
      "title": "Accounting Settings",
      "description": "Manages settings for the accounting section.",
      "type": "object",
      "properties": {
        "expenseCategories": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" }
            },
            "required": ["name"]
          }
        }
      }
    },
    "CustomOrderSettings": {
      "title": "Custom Order Settings",
      "description": "Contains settings for the custom order form.",
      "type": "object",
      "properties": {
        "unitsOfMeasure": {
          "type": "array",
          "items": { "$ref": "#/entities/UnitOfMeasure" }
        },
        "optionalServices": {
          "type": "array",
          "items": { "$ref": "#/entities/OptionalService" }
        },
        "shippingZones": {
          "type": "array",
          "items": { "$ref": "#/entities/ShippingZone" }
        },
        "suppliers": {
            "type": "array",
            "items": { "$ref": "#/entities/Supplier" }
        }
      }
    },
    "PurchaseOrder": {
      "title": "Purchase Order",
      "description": "Represents an order placed with a supplier.",
      "type": "object",
      "properties": {
        "poNumber": { "type": "string" },
        "supplier": { "$ref": "#/entities/Supplier" },
        "issueDate": { "type": "string", "format": "date-time" },
        "deliveryDate": { "type": "string", "format": "date-time" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": { "type": "string" },
              "quantity": { "type": "number" },
              "unitCost": { "type": "number" },
              "total": { "type": "number" }
            },
            "required": ["description", "quantity", "unitCost", "total"]
          }
        },
        "subtotal": { "type": "number" },
        "shipping": { "type": "number" },
        "total": { "type": "number" },
        "status": {
          "type": "string",
          "enum": ["Draft", "Issued", "Completed", "Cancelled"]
        },
        "notes": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["poNumber", "supplier", "issueDate", "items", "subtotal", "total", "status"]
    },
    "Expense": {
      "title": "Expense",
      "description": "Represents a single business expense.",
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "category": { "type": "string" },
        "amount": { "type": "number" },
        "date": { "type": "string", "format": "date-time" },
        "receiptUrl": { "type": "string", "format": "uri" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["description", "category", "amount", "date", "createdAt"]
    },
    "FeaturedProduct": {
      "title": "Featured Product",
      "description": "A product featured on the homepage.",
      "type": "object",
      "properties": {
        "imageUrl": { "type": "string", "format": "uri" },
        "description": { "type": "string" },
        "price": { "type": "string" }
      }
    },
    "FeaturedService": {
      "title": "Featured Service",
      "description": "A service featured on the homepage.",
      "type": "object",
      "properties": {
        "icon": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" }
      }
    },
    "HomePageSettings": {
      "title": "Homepage Settings",
      "description": "Manages all content for the homepage.",
      "type": "object",
      "properties": {
        "introMessage": { "type": "string" },
        "featuredProducts": {
          "type": "array",
          "items": { "$ref": "#/entities/FeaturedProduct" }
        },
        "featuredServices": {
          "type": "array",
          "items": { "$ref": "#/entities/FeaturedService" }
        },
        "youtubeVideoUrl": { "type": "string", "format": "uri" },
        "youtubeVideoDescription": { "type": "string" },
        "aboutUs": { "type": "string" }
      }
    },
    "FooterSettings": {
      "title": "Footer Settings",
      "description": "Manages all content for the site footer.",
      "type": "object",
      "properties": {
        "socialLinks": {
          "type": "object",
          "properties": {
            "facebook": { "type": "string", "format": "uri" },
            "instagram": { "type": "string", "format": "uri" },
            "youtube": { "type": "string", "format": "uri" }
          }
        },
        "privacyPolicyLink": { "type": "string", "format": "uri" },
        "termsLink": { "type": "string", "format": "uri" },
        "cookiesPolicyLink": { "type": "string", "format": "uri" },
        "address": { "type": "string" },
        "openingHours": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public profile information for each user."
    },
    "/quotes/{quoteId}": {
      "schema": { "$ref": "#/entities/Quote" },
      "description": "Stores custom quote requests from users."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Stores finalized orders after payment."
    },
     "/purchaseOrders/{poId}": {
      "schema": { "$ref": "#/entities/PurchaseOrder" },
      "description": "Stores purchase orders placed with suppliers."
    },
    "/expenses/{expenseId}": {
      "schema": { "$ref": "#/entities/Expense" },
      "description": "Stores individual business expenses."
    },
    "/users/{userId}/notifications/{notificationId}": {
      "schema": { "$ref": "#/entities/Notification" },
      "description": "Stores notifications for a specific user."
    },
    "/notifications/{notificationId}": {
      "schema": { "$ref": "#/entities/Notification" },
      "description": "Stores notifications for admin roles."
    },
    "/settings/store": {
        "schema": { "$ref": "#/entities/StoreSettings" },
        "description": "Stores the settings and product list for the store showcase. This is a single document."
    },
    "/settings/customOrder": {
      "schema": { "$ref": "#/entities/CustomOrderSettings" },
      "description": "Stores settings for the custom order form, such as units, services, and shipping zones. This is a single document."
    },
    "/settings/accounting": {
      "schema": { "$ref": "#/entities/AccountingSettings" },
      "description": "Stores settings for the accounting section, such as expense categories. This is a single document."
    },
    "/settings/homepage": {
      "schema": { "$ref": "#/entities/HomePageSettings" },
      "description": "Stores all content for the homepage. This is a single document."
    },
    "/settings/footer": {
      "schema": { "$ref": "#/entities/FooterSettings" },
      "description": "Stores all content for the site footer. This is a single document."
    }
  }
}
