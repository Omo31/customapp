
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // Check that the user document exists and that the roles array is not empty.
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.size() > 0;
    }
    
    // --- Collection Rules ---

    // Users can read/update their own profile. Admins can read/write any profile.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create, delete: if isAdmin(); // Only admins can create/delete user records directly
      
      // Allow admins to read/write any user profile
      allow read, write: if isAdmin();

      // Notifications subcollection: Only the user can access their notifications.
      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Quotes: Users can create. Users can read their own. Admins can read/write all.
    match /quotes/{quoteId} {
      allow create: if request.auth != null;
      allow read: if isOwner(resource.data.userId);
      allow update: if isOwner(resource.data.userId) || isAdmin();
      allow read, write: if isAdmin();
    }
    
    // Orders: Users can read their own. Admins can read/write all.
    // Creation is handled by the server-side webhook.
    match /orders/{orderId} {
        allow read: if isOwner(resource.data.userId);
        allow read, write: if isAdmin();
        // Disallow direct client-side creation of orders
        allow create: if false; 
    }
    
    // Admin-only collections
    match /purchaseOrders/{poId} {
        allow read, write: if isAdmin();
    }
    
    match /expenses/{expenseId} {
        allow read, write: if isAdmin();
    }
    
    // Notifications (Root collection for admins)
    // This allows the webhook to write system-wide notifications
    // and allows admins to read them.
    match /notifications/{notificationId} {
      allow read: if isAdmin();
      allow create: if request.auth == null; // Allow webhook (unauthenticated server process) to create
    }

    // Settings are public to read, but only admins can write.
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
