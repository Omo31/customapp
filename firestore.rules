
rules_version = '2';

// Triggering re-deployment to verify project connection.

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an admin
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.size() > 0;
    }
    
    // Helper function to check if a user has a specific role
    function hasRole(role) {
      // Allow superadmin full access
      if (request.auth.token.email == 'oluwagbengwumi@gmail.com') {
        return true;
      }
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny([role, 'settings']);
    }

    // Secure user profiles
    match /users/{userId} {
      allow read: if request.auth.uid == userId || hasRole('users');
      allow create: if request.auth.uid == userId && !("roles" in request.resource.data); // Anyone can create their own profile, but cannot assign roles
      allow update: if (request.auth.uid == userId && !("roles" in request.resource.data)) // Users can update their profile, but not their roles
                       || (hasRole('users') && request.resource.data.email != 'oluwagbengwumi@gmail.com'); // Admins with 'users' role can update anyone except the superadmin
    }

    // Secure user-specific notifications
    match /users/{userId}/notifications/{notificationId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Secure quotes
    // ** Firestore Index Required **
    // For the "My Quotes" page to work, you need a composite index on:
    // Collection: quotes
    // Fields: 1. userId (Ascending), 2. createdAt (Descending)
    match /quotes/{quoteId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read: if request.auth.uid == resource.data.userId || hasRole('quotes');
      allow update: if hasRole('quotes'); // Only admins can update quotes (e.g., to add pricing)
    }

    // Secure orders
    // ** Firestore Index Required **
    // For the "Order History" page to work, you need a composite index on:
    // Collection: orders
    // Fields: 1. userId (Ascending), 2. createdAt (Descending)
    match /orders/{orderId} {
      allow create: if false; // Orders are created by the server-side webhook (backend process)
      allow read: if request.auth.uid == resource.data.userId || hasRole('orders');
      allow update: if hasRole('orders'); // Only admins can update order status
    }
    
    // Secure Purchase Orders (Admin only)
    match /purchaseOrders/{poId} {
        allow read, write: if hasRole('purchase-orders');
    }

    // Secure Expenses (Admin only)
    match /expenses/{expenseId} {
        allow read, write: if hasRole('accounting');
    }

    // Central Admin Notifications
    match /notifications/{notificationId} {
        allow read: if isAdmin();
        allow write: if request.auth != null; // Allow creation from quote form or backend
    }

    // Secure settings documents
    match /settings/{settingId} {
      allow read: if true; // All settings are public-facing content
      allow write: if hasRole('settings'); // Only admins with the 'settings' role can change them
    }
  }
}
