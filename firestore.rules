
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---

    function getUserData(userId) {
      let uid = userId != null ? userId : request.auth.uid;
      return get(/databases/$(database)/documents/users/$(uid)).data;
    }
    
    function isNotDisabled() {
        return getUserData(request.auth.uid).disabled != true;
    }
    
    function isOwner(userId) {
      // SIMPLIFIED: Removed the isNotDisabled() check from here to break the circular dependency.
      // A user should always be able to check their own profile, even if they are disabled.
      // The isNotDisabled() check is still used elsewhere for actions, which is correct.
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isSuperAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             'superadmin' in getUserData(request.auth.uid).roles;
    }

    function hasRole(role) {
        return isSuperAdmin() || (
               request.auth != null &&
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               role in getUserData(request.auth.uid).roles &&
               isNotDisabled()
        );
    }
    
    function isAdmin() {
        return isSuperAdmin() || (
               request.auth != null && 
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               getUserData(request.auth.uid).roles.size() > 0 &&
               isNotDisabled()
        );
    }
    
    function isQuoteOwner(quote) {
      return isOwner(quote.userId);
    }
    
    function isChangingStatusTo(status) {
      return request.resource.data.status == status && resource.data.status != status;
    }

    // --- Collection Rules ---

    // Users Collection
    match /users/{userId} {
      // UPDATED: The simplified isOwner function now makes this rule work correctly for new users.
      allow read: if hasRole('users') || isOwner(userId);
      allow update: if (isOwner(userId) && !('roles' in request.resource.data)) || hasRole('users');
      allow create: if request.auth.uid == userId;
      allow delete: if hasRole('users');
      allow list: if hasRole('users');

      // User Notifications Subcollection
      match /notifications/{notificationId} {
        allow read, write, create, list: if isOwner(userId);
      }
    }

    // Quotes Collection
    match /quotes/{quoteId} {
      allow read: if isQuoteOwner(resource.data) || hasRole('quotes');
      allow update: if hasRole('quotes') || 
                      (isQuoteOwner(resource.data) && (
                          isChangingStatusTo('Quote Ready') ||
                          isChangingStatusTo('Rejected') ||
                          isChangingStatusTo('Cancelled')
                      ));
      allow create: if request.auth != null && isNotDisabled();
      allow list: if hasRole('quotes') || (request.auth != null && request.query.where[0] == 'userId' && request.query.where[2] == request.auth.uid && isNotDisabled());
    }
    
    // Orders Collection
    match /orders/{orderId} {
      allow read: if isOwner(resource.data.userId) || hasRole('orders');
      allow write, update: if hasRole('orders');
      allow create, delete: if false; 
      allow list: if hasRole('orders') || (request.auth != null && request.query.where[0] == 'userId' && request.query.where[2] == request.auth.uid && isNotDisabled());
    }
    
    // Purchase Orders Collection (Admin-only)
    match /purchaseOrders/{poId} {
      allow read, write, create, list: if hasRole('purchase-orders');
    }
    
    // Expenses Collection (Admin-only)
    match /expenses/{expenseId} {
      allow read, write, create, list: if hasRole('accounting');
    }
    
    // Root Notifications Collection for Admins
    match /notifications/{notificationId} {
      allow read, list: if isAdmin();
      allow update, delete: if hasRole('notifications');
      allow create: if request.auth != null;
    }

    // Settings Collection
    match /settings/{settingId} {
      allow read: if true;
      allow write: if hasRole('settings');
    }
  }
}
