
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function getUserData() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasRole(role) {
        return request.auth != null &&
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               role in getUserData().roles;
    }
    
    function isAdmin() {
        // An admin is anyone with at least one role.
        return request.auth != null && 
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               getUserData().roles.size() > 0;
    }
    
    // --- Collection Rules ---

    // Users Collection
    match /users/{userId} {
      allow read, update, write: if isOwner(userId) || hasRole('users');
      allow delete: if hasRole('users');

      // User Notifications Subcollection
      match /notifications/{notificationId} {
        allow read, write, create, list: if isOwner(userId);
      }
    }
    
    match /users/{document=**} {
        allow list: if hasRole('users');
        allow create: if isOwner(request.resource.data.userId);
    }


    // Quotes Collection
    match /quotes/{quoteId} {
        allow read: if isOwner(resource.data.userId) || hasRole('quotes');
        allow update, write: if hasRole('quotes');
        allow delete: if hasRole('quotes');
    }
    match /quotes/{document=**} {
        allow list: if hasRole('quotes');
        allow create: if request.auth != null;
    }
    
    // Orders Collection
    match /orders/{orderId} {
        allow read: if isOwner(resource.data.userId) || hasRole('orders');
        allow update, write: if hasRole('orders');
    }
    match /orders/{document=**} {
        allow list: if hasRole('orders');
        // Direct creation/deletion of orders is disallowed. They are created by the webhook.
        allow create, delete: if false; 
    }
    
    // Purchase Orders Collection (Admin-only)
    match /purchaseOrders/{poId} {
        allow read, write: if hasRole('purchase-orders');
    }
    match /purchaseOrders/{document=**} {
        allow list, create: if hasRole('purchase-orders');
    }
    
    // Expenses Collection (Admin-only)
    match /expenses/{expenseId} {
        allow read, write: if hasRole('accounting');
    }
    match /expenses/{document=**} {
         allow list, create: if hasRole('accounting');
    }
    
    // Root Notifications Collection for Admins
    match /notifications/{notificationId} {
        // Admins can list/read notifications relevant to their roles
        allow list, read: if isAdmin() && (
                            (resource.data.role == 'orders' && hasRole('orders')) ||
                            (resource.data.role == 'quotes' && hasRole('quotes')) ||
                            (resource.data.role == 'users' && hasRole('users')) ||
                            // Admins with the central 'notifications' role can see all admin notifications
                            hasRole('notifications')
                         );
        allow write: if hasRole('notifications');
        // Allow server-side processes (like webhooks) and admins to create notifications
        allow create: if request.auth == null || isAdmin();
    }

    // Settings Collection
    match /settings/{settingId} {
      allow read: if true;
      allow write: if hasRole('settings');
    }
  }
}
