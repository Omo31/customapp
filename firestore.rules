
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId && isNotDisabled();
    }

    function getUserData(userId) {
      // Default to request.auth.uid if no userId is provided
      let uid = userId ? userId : request.auth.uid;
      return get(/databases/$(database)/documents/users/$(uid)).data;
    }
    
    function isNotDisabled() {
        // A user is NOT disabled if the `disabled` field is not true.
        // This allows users without the field (old users) or with `disabled: false` to pass.
        return getUserData(request.auth.uid).disabled != true;
    }

    function hasRole(role) {
        // Superadmin always has the role.
        if (request.auth.token.email == 'oluwagbengwumi@gmail.com') {
            return true;
        }
        return request.auth != null &&
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               role in getUserData(request.auth.uid).roles &&
               isNotDisabled();
    }
    
    function isAdmin() {
        // An admin is anyone with at least one role.
        if (request.auth.token.email == 'oluwagbengwumi@gmail.com') {
            return true;
        }
        return request.auth != null && 
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               getUserData(request.auth.uid).roles.size() > 0 &&
               isNotDisabled();
    }
    
    function isQuoteOwner(quote) {
      return isOwner(quote.userId);
    }
    
    function isChangingStatusTo(status) {
      return request.resource.data.status == status && resource.data.status != status;
    }

    // --- Collection Rules ---

    // Users Collection
    match /users/{userId} {
      // Admins can read any profile, users can only read their own if not disabled.
      allow read: if hasRole('users') || (isOwner(userId) && isNotDisabled());
      // Admins can update any profile, users can only update their own if not disabled.
      allow update: if hasRole('users') || (isOwner(userId) && isNotDisabled());
      // A user can only create their own document. This is critical for signup.
      allow create: if request.auth.uid == userId;
      // Only admins can delete.
      allow delete: if hasRole('users');
      // Admins with the 'users' role can list all user documents
      allow list: if hasRole('users');

      // User Notifications Subcollection
      match /notifications/{notificationId} {
        allow read, write, create, list: if isOwner(userId) && isNotDisabled();
      }
    }

    // Quotes Collection
    match /quotes/{quoteId} {
        allow read: if isQuoteOwner(resource.data) || hasRole('quotes');
        allow update: if hasRole('quotes') || 
                        (isQuoteOwner(resource.data) && (
                            isChangingStatusTo('Quote Ready') ||
                            isChangingStatusTo('Rejected') ||
                            isChangingStatusTo('Cancelled')
                        ));
        allow create: if request.auth != null && isNotDisabled(); // Any authenticated, non-disabled user can create a quote
    }
    match /quotes/{document=**} {
        allow list: if request.auth != null && isNotDisabled();
    }
    
    // Orders Collection
    match /orders/{orderId} {
        allow read: if isOwner(resource.data.userId) || hasRole('orders');
        allow write, update: if hasRole('orders');
        allow create, delete: if false; 
    }
    match /orders/{document=**} {
        // Users can list their own orders (filtered by userId in the query)
        // Admins with 'orders' role can list all orders
        allow list: if request.auth != null && isNotDisabled();
    }
    
    // Purchase Orders Collection (Admin-only)
    match /purchaseOrders/{poId} {
      allow read, write, create: if hasRole('purchase-orders');
    }
    match /purchaseOrders/{document=**} {
        allow list: if hasRole('purchase-orders');
    }
    
    // Expenses Collection (Admin-only)
    match /expenses/{expenseId} {
        allow read, write, create: if hasRole('accounting');
    }
    match /expenses/{document=**} {
         allow list: if hasRole('accounting');
    }
    
    // Root Notifications Collection for Admins
    match /notifications/{notificationId} {
      allow read, list: if isAdmin();
      allow update, delete: if hasRole('notifications');
      // Allow any authenticated user to create a notification for system events.
      // This is primarily for the "New User Joined" and "Quote Submitted" notifications.
      // The content of the notification itself is validated by the server-side logic in the application code.
      allow create: if request.auth != null;
    }

    // Settings Collection
    match /settings/{settingId} {
      allow read: if true;
      allow write: if hasRole('settings');
    }
  }
}
