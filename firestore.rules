
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function getUserData() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasRole(role) {
        return request.auth != null &&
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               role in getUserData().roles;
    }
    
    function isAdmin() {
        // An admin is anyone with at least one role.
        return request.auth != null && 
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               getUserData().roles.size() > 0;
    }
    
    // --- Collection Rules ---

    // Users can create/read/update their own profile. Admins can read/write any profile.
    match /users/{userId} {
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || hasRole('users');
      allow read: if isOwner(userId) || hasRole('users');
      allow delete: if hasRole('users');
      allow list: if hasRole('users');

      // Notifications subcollection: Only the user can access their notifications.
      // Admins with the 'notifications' role can list them for collection group queries.
      match /notifications/{notificationId} {
        allow read, write, create: if isOwner(userId);
        allow list: if hasRole('notifications');
      }
    }

    // Quotes: Users can create. Users can read their own. Admins can read/write all.
    match /quotes/{quoteId} {
      allow create: if request.auth != null;
      allow read: if isOwner(resource.data.userId) || hasRole('quotes');
      allow update: if isOwner(resource.data.userId) || hasRole('quotes');
      allow list: if hasRole('quotes');
      allow delete: if hasRole('quotes');
    }
    
    // Orders: Users can read their own. Admins can read/write all.
    // Creation is handled by the server-side webhook.
    match /orders/{orderId} {
        allow read: if isOwner(resource.data.userId) || hasRole('orders');
        allow update: if hasRole('orders');
        allow list: if hasRole('orders');
        // Disallow direct client-side creation/deletion of orders
        allow create, delete: if false; 
    }
    
    // Admin-only collections based on specific roles
    match /purchaseOrders/{poId} {
        allow read, write: if hasRole('purchase-orders');
    }
    
    match /expenses/{expenseId} {
        allow read, write: if hasRole('accounting');
    }
    
    // Notifications (Root collection for admins and webhook)
    match /notifications/{notificationId} {
      allow read: if isAdmin();
      // Allow webhook (unauthenticated server process) to create system notifications
      allow create: if request.auth == null; 
    }

    // Settings are public to read, but only admins with the 'settings' role can write.
    match /settings/{settingId} {
      allow read: if true;
      allow write: if hasRole('settings');
    }
  }
}
